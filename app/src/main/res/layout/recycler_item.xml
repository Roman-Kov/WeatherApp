<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="260dp"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00.00.0000"
                />
            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="@android:color/holo_blue_dark"
                android:fontFamily="sans-serif-light"
                app:layout_constraintStart_toStartOf="@id/date"
                app:layout_constraintTop_toBottomOf="@id/date"
                tools:text="City name"
                />
            <TextView
                android:id="@+id/cityTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                app:layout_constraintStart_toStartOf="@id/date"
                app:layout_constraintTop_toBottomOf="@id/cityName"
                tools:text="00"
                />
            <TextView
                android:id="@+id/simbolC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="3dp"
                android:text="CÂ°"
                android:fontFamily="sans-serif-light"
                app:layout_constraintTop_toTopOf="@id/cityTemperature"
                app:layout_constraintStart_toEndOf="@id/cityTemperature"
                />
            <ImageView
                android:id="@+id/cityEmblem"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/moscow"
                android:scaleType="fitXY"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/simbolC"
                app:layout_constraintStart_toEndOf="@id/simbolC"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>